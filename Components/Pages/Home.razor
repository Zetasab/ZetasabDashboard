@page "/"

<PageTitle>Home</PageTitle>

<div style="display:flex;flex-direction:column;align-items:center;">
    <div class="dashboard-header" >
        <!-- Si quieres pon un logo aquí -->
        <span>👨‍💻</span> My Projects Dashboard
    </div>
    <div class="dashboard-grid" style="margin-top:40px;"  >
        
        @foreach (var proy in DataList)
        {
            <div class="project-card" @onclick="@(() => OnClick(proy.Url))">
                <img class="project-img" width="500" height="300" src="@($"Img/proyects/{proy.Code}.png")" loading="lazy" />
                <div class="project-title">@($"{proy.Icon} {proy.Name}")</div>
            </div>
        }
        <!-- Agrega más proyectos aquí -->
    </div>
</div>

